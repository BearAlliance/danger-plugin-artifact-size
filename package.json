{
  "name": "danger-plugin-artifact-size",
  "description": "Prints artifact sizes as a markdown table",
  "author": {
    "name": "Nick Cacace",
    "email": "NickCacace@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bearalliance/danger-plugin-artifact-size.git"
  },
  "bugs": {
    "url": "https://github.com/bearalliance/danger-plugin-artifact-size/issues"
  },
  "homepage": "https://github.com/bearalliance/danger-plugin-artifact-size#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "artifact",
    "size"
  ],
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc",
    "test": "jest",
    "prepublish": "npm run build",
    "prettier-project": "prettier --write 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "./dist"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.8",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "danger": "*",
    "eslint": "^8.40.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "glob": "^10.2.3"
  }
}
